<%- include ("header") %>

<div id="slider">
    <% if (message != "") { %>
        <div class="alert alert-success" role="alert">
            <%= message %>
        </div>
    <% } %>
    <% if (error != "") { %>
        <div class="alert alert-danger" role="alert">
            <%= error %>
        </div>
    <% } %>
    <div id="carouselExampleCaptions" class="carousel slide" data-ride="carousel">
        <ol class="carousel-indicators">
            <li data-target="#carouselExampleCaptions" data-slide-to="0" class="active"></li>
            <li data-target="#carouselExampleCaptions" data-slide-to="1"></li>
            <li data-target="#carouselExampleCaptions" data-slide-to="2"></li>
            <li data-target="#carouselExampleCaptions" data-slide-to="3"></li>
            <li data-target="#carouselExampleCaptions" data-slide-to="4"></li>
        </ol>
        <div class="carousel-inner">
            <div class="carousel-item active">
                <img src="../static/img/2758843.jpg" class="d-block w-100" alt="...">
                <div class="carousel-caption d-none d-md-block">
                    <h2>MIRZAPUR S2</h2>
                    <p> "Hum banayenge Mirzapur ko Amrica!"</p>
                </div>
            </div>
            <div class="carousel-item">
                <img src="../static/img/782186.jpg" class="d-block w-100" alt="...">
                <div class="carousel-caption d-none d-md-block">
                    <h2>FRIENDS</h2>
                    <p>“Well, maybe I don't need your money. Wait, wait, I said maybe!” ...</p>
                </div>
            </div>
            <div class="carousel-item">
                <img src="../static/img/poc.jpg" class="d-block w-100" alt="...">
                <div class="carousel-caption d-none d-md-block">
                    <h2>PIRATES OF THE CARIBBEAN</h2>
                    <p> "I'm dishonest, and a dishonest man you can always trust to be dishonest." ...</p>
                </div>
            </div>
            <div class="carousel-item">
                <img src="../static/img/3515433-endgamedek.jpg" class="d-block w-100" alt="...">
                <div class="carousel-caption d-none d-md-block">
                    <h2>END GAME</h2>
                    <p>“I love you 3000”</p>
                </div>
            </div>
            <div class="carousel-item">
                <img src="../static/img/money.jpg" class="d-block w-100" alt="...">
                <div class="carousel-caption d-none d-md-block">
                    <h2>MONEY HEIST</h2>
                    <p>“Weakness is not in us, it is in what we have outside.”</p>
                </div>
            </div>
        </div>
        <a class="carousel-control-prev" href="#carouselExampleCaptions" role="button" data-slide="prev">
            <span class="carousel-control-prev-icon" aria-hidden="true"></span>
            <span class="sr-only">Previous</span>
        </a>
        <a class="carousel-control-next" href="#carouselExampleCaptions" role="button" data-slide="next">
            <span class="carousel-control-next-icon" aria-hidden="true"></span>
            <span class="sr-only">Next</span>
        </a>
    </div>
</div>
</div>
<div class="middle">
    <div class="content">
        <p>Series</p>
        <div class="imgs">
            <% for(var i=0; i < series.length; i++) { %>
            <div class="box">
                <img src="/<%= series[i].seriesThumbnail %>" alt="">
                <div class="text">
                    <form class="fav-icon" action="/fav/add/series/<%= series[i]._id %>" method="GET">
                        <button type="submit" class="fa fa-heart-o"></button>
                    </form>
                    <p>Series-Title: <%= series[i].seriesTitle %></p>
                    <p>Series-Category: <%= series[i].seriesCategory %></p>
                    <p>Series-Price:&#8377; <%= series[i].seriesPrice %></p>
                    <p>No. of Episodes: <%= series[i].episodeCount %></p>
                    <% if(series[i].videoList.length != 0) { %>
                    <form action="/watch/<%= series[i].videoList[0]._id %>" method="GET">
                        <button type="submit" class="fa fa-play-circle-o"></button>
                    </form>
                    <% } %>
                    <form action="/cart/add/series/<%= series[i]._id %>" method="GET">
                        <input class="add" type="submit" value="Add to Cart">
                    </form>
                </div>
            </div>
            <% } %>
        </div>
    </div>
    <div class="content">
        <p>Solo</p>
        <div class="imgs">
            <% for(var i=0; i < video.length; i++) { %>
            <% if(video[i]._seriesId == null) { %>
            <div class="box">
                <img src="/<%= video[i].thumbnail %>" alt="">
                <div class="text">
                    <form class="fav-icon" action="/fav/add/video/<%= video[i]._id %>" method="GET">
                        <button type="submit" class="fa fa-heart-o"></button>
                    </form>
                    <p>Title: <%= video[i].title %></p>
                    <p>Category: <%= video[i].category %></p>
                    <p>Price:&#8377; <%= video[i].price %></p>
                    <form action="/watch/<%= video[i]._id %>" method="GET">
                        <button type="submit" class="fa fa-play-circle-o"></button>
                    </form>
                    <form action="/cart/add/video/<%= video[i]._id %>" method="GET">
                        <input class="add" type="submit" value="Add to Cart">
                    </form>
                </div>
            </div>
            <% } %>
            <% } %>
        </div>
    </div>
</div>

<%- include ("footer") %>